{
    "name": "<%= projectName %>",
    "description": "This project was generated from the Mintbean <%= templateName %> template using the mintbean-cli tool.",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "parcel index.html",
        "predeploy": "rm -fr .cache dist && parcel build index.html --public-url /<%= projectName %>",
        "deploy": "gh-pages -d dist",
        "build": "parcel build index.html"
    },
    "mintbean": {
        "template": "<%= templateName %>",
        "homepage": "https://<%= githubUsername %>.github.io/<%= projectName %>/",
        "scripts": {
            "deploy": "npm run deploy",
            "develop": "npm run start"
        }
    },
    "dependencies": {
        "bulma": "^0.9.0"
    },
    "devDependencies": {
        "parcel": "^1.12.4",
        "gh-pages": "^3.1.0"
    }
}